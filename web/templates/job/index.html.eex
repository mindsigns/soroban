<h2>Job Listing</h2>

<%= link "New job", class: "btn btn-primary btn-md", to: job_path(@conn, :new) %>
<!-- Modal -->
<div class="modal fade" id="myModalHorizontal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close"
                   data-dismiss="modal">
                       <span aria-hidden="true">&times;</span>
                       <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    Search
                </h4>
            </div>

<!-- Modal Body -->
<div class="modal-body">

<%= search_form(@conn, @rummage, [fields:
[
  name: %{label: "Client Search", search_type: "ilike", assoc: ["client"]}
], button_class: "btn",
]) %>

<%= search_form(@conn, @rummage, [fields:
[
  reference: %{label: "Search by Reference", search_type: "ilike"},
  caller: %{label: "Search by Caller", search_type: "ilike"},
  type: %{label: "Search by type", search_type: "ilike"},
], button_class: "btn",
]) %>
            </div>
        </div>
    </div>
</div>
<button class="btn btn-primary btn-md" data-toggle="modal" data-target="#myModalHorizontal">
    Job Search
</button>

<table id="sortable" class="table">
  <thead>
    <tr>
      <th>Client</th>
      <th>Date</th>
      <th>Reference</th>
      <th>Caller</th>
      <th>Type</th>
      <th>Description</th>
      <th>Zone</th>
      <th>Service Type</th>
      <th>Details</th>
      <th>Total</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for job <- @jobs do %>
    <tr>
      <td><%= job.client.name %></td>
      <td><%= job.date %></td>
      <td><%= job.reference %></td>
      <td><%= job.caller %></td>
      <td><%= job.type %></td>
      <td><%= job.description %></td>
      <td><%= job.zone %></td>
      <td><%= job.service %></td>
      <td><%= job.details %></td>
      <td><%= job.total %></td>

      <td class="text-right">
        <%= link "Show", to: job_path(@conn, :show, job), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: job_path(@conn, :edit, job), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: job_path(@conn, :delete, job), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New job", to: job_path(@conn, :new) %>

<%= pagination_link(@conn, @rummage) %>
