<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= text_input f, :number, class: "form-control", required: true , placeholder: "Invoice Number"%>
    <%= error_tag f, :number %>
  </div>

  <div class="form-group">
    <%= label f, :client_id, class: "control-label font-weight-bold" %>
    <%= select f, :client_id, @clients, class: "form-control chosen_select", prompt: "Select a client", required: true %>
    <%= error_tag f, :client_id %>
  </div>

  <div class="form-group">
    <%= label f, :name, "Invoice Date", class: "control-label font-weight-bold" %>
    </br>
    <%= date_select f, :date, default: {@today.year, @today.month, @today.day}, class: "form-control" %>
    <%= error_tag f, :date %>
  </div>

  <div class="form-group">
    <%= label f, :name, "Invoice Start Date", class: "control-label font-weight-bold" %>
    </br>
    <%= date_select f, :start, default: {@today.year, @today.month, @today.day}, class: "form-control" %>
    <%= error_tag f, :start %>
  </div>

  <div class="form-group">
    <%= label f, :name, "Invoice End Date", class: "control-label font-weight-bold" %>
    </br>
    <%= date_select f, :end, default: {@today.year, @today.month, @today.day}, class: "form-control" %>
    <%= error_tag f, :end %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
