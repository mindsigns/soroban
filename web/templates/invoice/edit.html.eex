<div class="col-md-6">
<h2 class="page-header">Edit invoice</h2>

<%= render "form.html", changeset: @changeset,
                        clients: @clients,
                        today: @today,
                        invoice: @invoice,
                        action: invoice_path(@conn, :update, @invoice) %>

<div class="panel-footer">
  <%= link "Back", to: invoice_path(@conn, :show, @invoice), class: "btn btn-default" %>
</div>
</div>
</div>
