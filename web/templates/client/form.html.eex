<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= text_input f, :name, class: "form-control", placeholder: "Client Name" %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <%= text_input f, :contact, class: "form-control", placeholder: "Contact Name" %>
    <%= error_tag f, :contact %>
  </div>

  <div class="form-group">
    <%= textarea f, :address, class: "form-control", placeholder: "Address" %>
    <%= error_tag f, :address %>
  </div>

  <div class="form-group">
    <%= text_input f, :email, class: "form-control", placeholder: "Email Address" %>
    <%= error_tag f, :email %>
  </div>

  <div class="form-group">
    <%= label f, "CC Email Addresses", class: "control-label font-weight-bold" %>
    <%= text_input f, :cc_email, class: "form-control", placeholder: "an optional list of email addresses separated by commas" %>
    <%= error_tag f, :cc_email %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
