<div class="panel panel-default">
  <div class="panel-body">

<%= form_for @changeset, @action, [multipart: true], fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :company_name, class: "control-label" %>
    <%= text_input f, :company_name, class: "form-control" %>
    <%= error_tag f, :company_name %>
  </div>

  <div class="form-group">
    <%= label f, :company_address, class: "control-label" %>
    <%= textarea f, :company_address, class: "form-control" %>
    <%= error_tag f, :company_address %>
  </div>

  <div class="form-group">
    <%= label f, :company_email, class: "control-label" %>
    <%= text_input f, :company_email, class: "form-control" %>
    <%= error_tag f, :company_email %>
  </div>

  <div class="form-group">
    <%= label f, :name, "Tagline for invoices", class: "control-label" %>
    <%= text_input f, :note, class: "form-control", placeholder: "This will message will be printed on all outgoing invoices" %>
    <%= error_tag f, :note%>
  </div>

  <div class="form-group">
    <%= label f, :name, "Number of Days to consider and invoice Past Due", class: "control-label" %>
    <%= text_input f, :days_pastdue, class: "form-control", placeholder: "Example: 45" %>
    <%= error_tag f, :days_pastdue%>
  </div>

  <div class="form-group">
    <%= label f, :name, "Tagline for outstanding invoices", class: "control-label" %>
    <%= text_input f, :outstanding_note, class: "form-control", placeholder: "This will replace the Tagline on all outstanding invoices." %>
    <%= error_tag f, :outstanding_note%>
  </div>


  <div class="form-group">
    <%= label f, :invoice_image, "Image file for invoices - should be a small image", class: "control-label" %>
    <%= file_input f, :invoice_image, class: "form-control" %>
    <%= error_tag f, :invoice_image %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>

</div>
